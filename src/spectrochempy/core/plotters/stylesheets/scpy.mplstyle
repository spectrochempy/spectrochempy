# =============================================================================
# SpectroChemPy Matplotlib style
# Minimal, modern, Matplotlib-compatible
# =============================================================================

# -----------------------------------------------------------------------------
# General behavior
# -----------------------------------------------------------------------------
style: default

# -----------------------------------------------------------------------------
# Lines (slightly cleaner than mpl default)
# -----------------------------------------------------------------------------
lines.linewidth               : 1.2
lines.markersize              : 6
lines.antialiased             : True

# -----------------------------------------------------------------------------
# Axes (keep matplotlib defaults, small refinements only)
# -----------------------------------------------------------------------------
axes.autolimit_mode           : data
axes.linewidth                : 1.0
axes.labelsize                : 10
axes.titlesize                : 12
axes.titlepad                 : 6
axes.grid                     : False
axes.unicode_minus            : True

# Keep facecolors untouched â†’ no gray background!
# axes.facecolor              : (do not set)
# figure.facecolor            : (do not set)

# -----------------------------------------------------------------------------
# Ticks (very light touch)
# -----------------------------------------------------------------------------
xtick.direction               : out
ytick.direction               : out
xtick.labelsize               : 9
ytick.labelsize               : 9

# -----------------------------------------------------------------------------
# Fonts (Matplotlib defaults, explicit for clarity)
# -----------------------------------------------------------------------------
font.family                   : sans-serif
font.size                     : 10
font.weight                   : normal

# -----------------------------------------------------------------------------
# Legends
# -----------------------------------------------------------------------------
legend.frameon                : False
legend.fontsize               : 9

# -----------------------------------------------------------------------------
# Images / 2D plots
# -----------------------------------------------------------------------------
image.cmap                    : viridis
image.origin                  : upper
image.interpolation           : nearest

# -----------------------------------------------------------------------------
# Figure layout
# -----------------------------------------------------------------------------
figure.autolayout             : True
figure.figsize                : 5.5, 3.5
figure.dpi                    : 96

# -----------------------------------------------------------------------------
# Saving
# -----------------------------------------------------------------------------
savefig.dpi                   : 300
savefig.bbox                  : standard

