# sans (equivalent to scpy: default)
# ----------------------------------------------------------------------------------------------------------------------

axes.prop_cycle: cycler('color', ['0072B2', '009E73', 'D55E00', 'CC79A7', 'F0E442', '56B4E9'])

axes.titlesize: 14
axes.grid: False

image.cmap: viridis

figure.figsize         : 6.8, 4.45
figure.dpi             : 96
figure.facecolor       : white
figure.edgecolor       : white
figure.autolayout      : True
figure.subplot.wspace  : 0.0
figure.subplot.hspace  : 0.0
figure.subplot.top     : 0.98
figure.subplot.bottom  : 0.12
figure.subplot.left    : 0.15
figure.subplot.right   : .95

# savefig.dpi      : 600
savefig.facecolor: white
savefig.edgecolor: white

font.family      : sans-serif
font.size        : 10
font.style       : normal
font.weight      : normal

grid.color: .85
grid.linestyle: -
grid.linewidth: .85

legend.fontsize: 9
legend.frameon: False
legend.numpoints: 1
legend.scatterpoints: 1
legend.labelspacing : 0.2
legend.handletextpad: 0.1
legend.columnspacing: .5

lines.linewidth: 0.75
lines.markeredgewidth: 0
lines.markersize: 7
lines.solid_capstyle: round

patch.facecolor: 4C72B0
patch.linewidth: .3

text.color: .15

xtick.color: .15
xtick.direction: out
xtick.labelsize: 10

ytick.color: .15
ytick.direction: out
ytick.labelsize: 10

mathtext.fontset : dejavusans
mathtext.rm      : dejavusans
mathtext.it      : dejavusans:italic
mathtext.bf      : dejavusans:bold
mathtext.cal     : cursive
mathtext.default : rm

text.usetex      : False

