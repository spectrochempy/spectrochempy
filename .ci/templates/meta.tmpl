package:
  name: {{ pyproject.project.name }}
  version: {{ version }}

source:
  path: ..

build:
  string: {{ devstring }}
  noarch: python
  script: export SETUPTOOLS_SCM_PRETEND_VERSION={{ version }} && python -m pip install .

requirements:
  host:
    - pip
    - python {{ pyproject.project['requires-python'] }}
    - setuptools
    - setuptools_scm
  run:
    - python {{ pyproject.project['requires-python'] }}
{{ dependencies }}

tests:
  - python:
      imports:
        - spectrochempy
      pip_check: true

about:
  homepage: {{ pyproject.project.urls.homepage}}
  license: LicenseRef-CeCILL-B
  license_family: OTHER
  summary: {{ pyproject.project.description }}
  documentation: {{ pyproject.project.urls.documentation }}
  repository: {{ pyproject.project.urls.repository }}
  description: |
{{ readme }}

extra:
  recipe-maintainers:
    - fernandezc
    - atravert
